<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/shared.css">
    <link rel="stylesheet" href="/css/areas.css">
</head>
<body>
    <%- include('partials/header') %>

    <main class="main-content">
        <section class="areas-section">
            <div class="container">
                <h1 class="page-title">Community Areas</h1>
                <p class="page-subtitle">Explore the different areas of interest and activities available in our community</p>
                
                <div class="areas-grid">
                    <% areas.forEach(area => { %>
                    <div class="area-card">
                        <div class="area-icon">
                            <% if (area.image_url) { %>
                                <img src="<%= area.image_url %>" alt="<%= area.name %>" />
                            <% } else { %>
                                üìç
                            <% } %>
                        </div>
                        <h3><%= area.name %></h3>
                        <p><%= area.description %></p>
                        
                        <% if (area.upcomingEvents && area.upcomingEvents.length > 0) { %>
                        <div class="area-activities">
                            <h4>Upcoming Activities:</h4>
                            <ul>
                                <% area.upcomingEvents.forEach(event => { %>
                                <li><%= event.title %> - <%= new Date(event.date).toLocaleDateString() %></li>
                                <% }) %>
                            </ul>
                        </div>
                        <% } %>
                        
                        <div class="area-actions">
                            <a href="/events?category=<%= area.id %>" class="btn-primary">See all events</a>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <div class="call-to-action">
                    <h2>Ready to Get Involved?</h2>
                    <p>Choose an area that interests you and start participating in your community today!</p>
                    <a href="/contact" class="btn-primary">Contact Us to Get Started</a>
                </div>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <%- include('partials/cookie-consent') %>

    <script src="/js/script.js"></script>
</body>
</html>